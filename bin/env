#!/bin/bash

REPO_ROOT_DIR="$(dirname "$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null && pwd )")"
export BBL_STATE_DIR="${REPO_ROOT_DIR}/../lab-ops-state/state"

cat <<EOF
export BBL_STATE_DIR="${REPO_ROOT_DIR}/../lab-ops-state/state"
$(${REPO_ROOT_DIR}/src/bucc/bin/bucc env)
EOF
export INFRA_SETTINGS_FILE=$REPO_ROOT_DIR/../lab-ops-state/infra-settings.yml
bosh_director_name=$(spruce json "$INFRA_SETTINGS_FILE" | jq -re '.director_name')
export FLY_TARGET=$bosh_director_name

